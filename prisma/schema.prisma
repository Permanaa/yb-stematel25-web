generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Alumni {
  id              String        @id @default(cuid())
  name            String
  photos          String?
  class           Class         @relation(fields: [classId], references: [id])
  classId         String

  @@index([classId])
}

model Class {
  id              String        @id @default(cuid())
  name            String
  slug            String        @unique
  alumni          Alumni[]
  major           Major         @relation(fields: [majorId], references: [id])
  majorId         String

  @@index([majorId])
}

model Major {
  id              String        @id @default(cuid())
  name            String        @unique
  abbreviation    String        @unique
  class           Class[]
}
